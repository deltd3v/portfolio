{
	"name": "portfolio",
	"version": "1.0.0",
	"description": "A static site",
	"main": "index.js",
	"scripts": {
		"update": "ncu -u && npm install",
		"compile:scss": "node-sass sass/main.scss css/style.css -w",
		"prefix:css": "postcss --use autoprefixer -b 'last 10 versions' css/style.css -o css/style.css",
		"compress:css": "node-sass css/style.css css/style.css --output-style compressed",
		"build": "npm-run-all prefix:css compress:css",
		"format": "prettier --write '**/**/**/*.{css,scss,html,json,md}'"
	},
	"author": "deltd3v",
	"license": "UNLICENSED",
	"devDependencies": {
		"autoprefixer": "^10.4.0",
		"node-sass": "^7.0.0",
		"npm-check-updates": "^12.0.3",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.4",
		"postcss-cli": "^9.0.2",
		"prettier": "^2.5.1"
	}
}
